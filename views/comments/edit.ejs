<!-- New Comment Form -->
<%- include("../partials/header")%>


<div class="container">
    <h1 class="text-center"> Edit your comment for <%= campground.name %> </h1> <!-- we could also do: <h1 style="text-align: center;" > same as BS3 class="text-center" -->
    <div class="row">
        <!-- don't use grid here: <div class="col-xs-3"> this does not work! -->
        <div style="width: 30%; margin: 30px auto;">    

            <!-- link to PUT request to the Update route, using method override  -->
            <!-- action: points to "/campgrounds/:id/comments/:comment_id", REST format -->
            <form action = "/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=PUT" method ="POST">

                <div class="form-group">    <!-- adds margin below the input elt-->
                    <!-- we can't use value="" for textarea -->
                    <textarea class="form-control"  name="comment[content]" cols="30" rows="10"><%= comment.content %></textarea>
                </div>
                <div class="form-group">
                    <!-- btn-block ==> makes btn into block element -->
                    <button class="btn btn-lg btn-primary btn-block"> Submit </button>
                </div>
    
            </form>
            
            <!-- BS3 makes it so easy to have <a> tags as buttons -->
            <a class=" btn btn-default" href="/campgrounds"> See All Campgrounds </a>
        </div>
    </div>
</div>


<%- include("../partials/footer")%>
